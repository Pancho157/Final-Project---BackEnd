<div class="login-form__container">
  <div>
    <h2 class="messages__title">Iniciar sesión</h2>

    <form class="login-form" action="/" method="post">
      <label for="email">Usuario:</label>
      <input
        class="login__input"
        id="email"
        name="email"
        type="email"
        required
        placeholder="Nombre de usuario / Email"
      />

      <label for="password">Contraseña:</label>
      <input
        class="login__input"
        id="password"
        name="password"
        type="password"
        required
        placeholder="Contraseña de usuario"
      />

      <button type="submit" class="login-form__button">
        Enviar
      </button>
    </form>
  </div>

  <div>
    <h2 class="messages__title">Formulario de registro</h2>

    <form
      class="login-form"
      action="/register"
      method="post"
      enctype="multipart/form-data"
    >

      <label for="image_uploads">Imágen de usuario: (PNG, JPG)</label>
      <input
        type="file"
        id="image_uploads"
        name="image_uploads"
        accept=".jpg, .jpeg, .png"
        required
      />

      <label for="email">Email:</label>
      <input
        class="login__input"
        id="email"
        name="email"
        type="email"
        required
        placeholder="Email del usuario"
      />

      <label for="alias">Nombre de usuario:</label>
      <input
        class="login__input"
        id="alias"
        name="alias"
        type="text"
        required
        placeholder="Nombre de usuario"
      />

      <label for="phoneNum">Número de teléfono:</label>
      <input
        class="login__input"
        id="phoneNum"
        name="phoneNum"
        type="tel"
        required
        placeholder="Número de teléfono"
      />

      <label for="password">Contraseña:</label>
      <input
        class="login__input"
        id="password"
        name="password"
        type="password"
        required
        placeholder="Contraseña de usuario"
      />

      <label for="password">Confirmar contraseña:</label>
      <input
        class="login__input"
        id="password"
        name="password"
        type="password"
        required
        placeholder="Contraseña de usuario"
      />

      <label for="image_uploads">Rol del usuario:</label>
      <div class="register_form--radio">
        <input type="radio" name="rol" value="normal" checked />
        Usuario normal<br />
      </div>

      <div class="register_form--radio">
        <input type="radio" name="rol" value="admin" />
        Administrador<br />
      </div>

      <button
        type="submit"
        id="register-button"
        name=""
        class="login-form__button"
        onclick="registerUser()"
      >
        Enviar
      </button>
    </form>
  </div>
</div>