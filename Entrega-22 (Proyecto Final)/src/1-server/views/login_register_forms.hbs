<div class="login-form__container">
  <div>
    <h2 class="messages__title">Iniciar sesión</h2>

    <form class="login-form" action="/" method="post">
      <label for="email">Usuario:</label>
      <input
        class="login__input"
        name="email"
        type="email"
        required
        placeholder="Nombre de usuario / Email"
      />

      <label for="password">Contraseña:</label>
      <input
        class="login__input"
        name="password"
        type="password"
        required
        placeholder="Contraseña de usuario"
      />

      <button type="submit" class="login-form__button">
        Enviar
      </button>
    </form>
  </div>

  {{!-----------------------------------------}}

  <div>
    <h2 class="messages__title">Formulario de registro</h2>

    <form
      class="login-form"
      action="/register"
      method="post"
    >

      <label for="email">Email:</label>
      <input
        class="login__input"
        id="email"
        name="email"
        type="email"
        required
        placeholder="Email del usuario"
      />

      <label for="name">Nombre:</label>
      <input
        class="login__input"
        id="name"
        name="name"
        type="text"
        required
        placeholder="Nombre de usuario"
      />

      <label for="lastName">Apellido:</label>
      <input
        class="login__input"
        id="lastName"
        name="lastName"
        type="text"
        required
        placeholder="Nombre de usuario"
      />

      <label for="phone">Número de teléfono:</label>
      <input
        class="login__input"
        id="phone"
        name="phone"
        type="tel"
        required
        placeholder="Número de teléfono"
      />

      <label for="deliveryAdress">Dirección de entrega:</label>
      <input
        class="login__input"
        id="deliveryAdress"
        name="deliveryAdress"
        type="text"
        required
        placeholder="Dirección de entrega"
      />

      <label for="password">Contraseña:</label>
      <input
        class="login__input"
        id="password"
        name="password"
        type="password"
        required
        placeholder="Contraseña de usuario"
      />

      <input
        class="login__input"
        id="passwordDup"
        name="passwordDup"
        type="password"
        required
        placeholder="Confirmar contraseña"
      />

      <label for="image_uploads">Rol del usuario:</label>
      <div class="register_form--radio">
        <input type="radio" name="rol" value="user" checked />
        Usuario<br />
      </div>

      <div class="register_form--radio">
        <input type="radio" name="rol" value="admin" />
        Administrador<br />
      </div>

      <button type="submit" class="login-form__button">
        Enviar
      </button>
    </form>
  </div>
</div>