<div id="errorMessage">Mensaje de error</div>

<div class="login-form__container">
  <a href="/login" class="login--redirectionButton">Log In Form</a>
  <h2 class="messages__title">Formulario de registro</h2>

  <form class="login-form" action="/register" method="post">
    <label for="email">Email:</label>
    <input
      class="login__input"
      id="email"
      name="email"
      type="email"
      required
      placeholder="Email del usuario"
    />

    <label for="alias">Nombre de usuario:</label>
    <input
      class="login__input"
      id="alias"
      name="alias"
      type="text"
      required
      placeholder="Nombre de usuario"
    />

    <label for="direction">Dirección:</label>
    <input
      class="login__input"
      id="direction"
      name="direction"
      type="text"
      required
      placeholder="Dirección del usuario"
    />

    <label for="age">Edad:</label>
    <input
      class="login__input"
      id="age"
      name="age"
      type="number"
      min="13"
      max="80"
      required
      placeholder="Edad del usuario"
    />

    <label for="phoneNum">Número de teléfono:</label>
    <input
      class="login__input"
      id="phoneNum"
      name="phoneNum"
      type="tel"
      required
      placeholder="Número de teléfono"
    />

    <label for="password">Contraseña:</label>
    <input
      class="login__input"
      id="password"
      name="password"
      type="password"
      required
      placeholder="Contraseña de usuario"
    />

    <label for="image_uploads">Subir una imagen (PNG, JPG)</label>
    <input
      type="file"
      id="image_uploads"
      name="image_uploads"
      accept=".jpg, .jpeg, .png"
      required
    />

    <div class="preview">
      <ol id="list">
        <p>Seleccione una imagen</p>
      </ol>
    </div>

    <button
      type="submit"
      id="register-button"
      name=""
      class="login-form__button"
      onclick="registerUser()"
    >
      Enviar
    </button>
  </form>
</div>

<script src="/registerImage.js"></script>